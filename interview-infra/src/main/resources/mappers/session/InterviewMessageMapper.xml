<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.deepknow.goodface.interview.repo.mapper.InterviewMessageMapper">

  <resultMap id="InterviewMessageMap" type="com.deepknow.goodface.interview.domain.session.model.InterviewMessage">
    <id column="id" property="id"/>
    <result column="session_id" property="sessionId"/>
    <result column="role" property="role"/>
    <result column="content" property="content"/>
    <result column="created_at" property="createdAt"/>
  </resultMap>

  <sql id="Base_Column_List">
    id, session_id, role, content, created_at
  </sql>

  <insert id="insert" parameterType="com.deepknow.goodface.interview.domain.session.model.InterviewMessage" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO interview_message (session_id, role, content, created_at)
    VALUES (#{sessionId}, #{role}, #{content}, #{createdAt})
  </insert>

  <select id="listBySession" parameterType="string" resultMap="InterviewMessageMap">
    SELECT <include refid="Base_Column_List"/>
    FROM interview_message
    WHERE session_id = #{sessionId}
    ORDER BY id ASC
  </select>

</mapper>